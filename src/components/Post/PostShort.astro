---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
---

<div>
  <div class="metadata">
    <div class="title">
      {
        (
          <a href={`/posts/${post.slug}`} data-astro-prefetch tabindex="0">
            {post.data.title}
          </a>
        )
      }
    </div>
    <div class="date">
      {post.data.date.toLocaleDateString()}
    </div>
  </div>
</div>
<style lang="scss">
  .metadata {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }
  .title {
    font-size: 1rem;
    font-weight: 600;
  }
  .date {
    align-items: center;
    display: flex;
    flex-direction: row;
    font-size: 1rem;
    gap: 0.25rem;
  }
</style>
