---
const links = [
  { label: "Posts", path: "/posts" },
  { label: "About", path: "/about" },
];
---

<div id="topnav" class="nav-container">
  <div class="topbar">
    <button id="mobile-menu-toggle" class="menu-btn" data-toggled="false">
      &#9776;
    </button>
    <div><a href="/" rel="prefetch">code.tnsi</a></div>
    <div class="nav-menu">
      <ul class="links">
        {
          links.map((link) => {
            return (
              <li>
                <a href={link.path} rel="prefetch">
                  {link.label}
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
  </div>
  <div id="mobile-menu" class="menu-list" data-toggled="false">
    <ul class="links">
      {
        links.map((link) => {
          return (
            <li>
              <a href={link.path} rel="prefetch">
                {link.label}
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
</div>

<style lang="scss">
  .nav-container {
    height: 80px;
    position: relative;
    z-index: 0;
  }

  .topbar {
    align-items: center;
    box-shadow: 0 4px 4px -4px rgba(0, 0, 0, 0.5);
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 1rem 2rem;
    position: relative;
    z-index: 1;
  }

  .menu-btn {
    background: none;
    border: none;
    color: currentColor;
    cursor: pointer;
    display: inline-block;
    font-size: 2rem;
    margin: 0;
    text-align: center;
    text-decoration: none;
    transition: transform 0.5s;

    &[data-toggled="true"] {
      transform: rotate(-90deg);
    }
  }

  .menu-list {
    background-color: var(--main-bg-color);
    box-shadow: 0 4px 4px -4px rgba(0, 0, 0, 0.5);
    padding: 1rem;
    position: absolute;
    width: 100%;
    z-index: 0;

    &[data-toggled="false"] {
      display: none;
    }
  }

  .nav-menu > .links {
    display: none;
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media screen and (min-width: 768px) {
    .menu-btn {
      display: none;
    }

    .menu {
      display: none;
    }

    .menu-list {
      display: none;
    }

    .nav-menu {
      display: block;
    }

    .nav-menu > .links {
      display: flex;
    }

    .links {
      flex-direction: row;
      gap: 1rem;
    }
  }
</style>
<script>
  const menuBtn = document.querySelector("#mobile-menu-toggle");
  const mobileMenu = document.querySelector("#mobile-menu");
  const topNav = document.querySelector("#topnav");

  function toggleMenu() {
    const isToggled = mobileMenu?.getAttribute("data-toggled") === "true";
    isToggled
      ? menuBtn?.setAttribute("data-toggled", "false")
      : menuBtn?.setAttribute("data-toggled", "true");
    isToggled
      ? mobileMenu?.setAttribute("data-toggled", "false")
      : mobileMenu?.setAttribute("data-toggled", "true");
  }

  function handleMenuClickOutside(e: MouseEvent) {
    const clickTarget = e.target as Element;
    const isToggled = mobileMenu?.getAttribute("data-toggled") === "true";
    if (topNav && isToggled) {
      const children = Array.from(topNav.getElementsByTagName("*"));
      const isNavChild = children.includes(clickTarget);
      if (!isNavChild) {
        mobileMenu?.setAttribute("data-toggled", "false");
        menuBtn?.setAttribute("data-toggled", "false");
      }
    }
  }

  menuBtn?.addEventListener("click", toggleMenu);
  document.addEventListener("click", (e) => handleMenuClickOutside(e));
</script>
