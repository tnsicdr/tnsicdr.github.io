---
import "../styles/reset.scss";
import "../styles/customizations.css";
import NavBar from "../components/Layout/GardenNavBar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <div class="page-wrapper">
      <header>
        <div class="header-container">
          <NavBar />
        </div>
      </header>
      <main>
        <div class="main-container">
          <slot />
        </div>
      </main>
      <footer></footer>
    </div>
  </body>
</html>

<style>
  body > div.page-wrapper > header > .header-container {
    max-width: 1440px;
    margin: 0 auto;
  }

  body > div.page-wrapper > main {
    max-width: 1440px;
    margin: 0 auto;
    margin-bottom: auto;
    width: 100%;
  }

  body > div.page-wrapper > main > .main-container {
    margin-bottom: auto;
    padding: 0.5rem;
    width: 100%;
  }

  body > div.page-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto 1fr auto;
    height: 100%;
    min-height: 100%;
    width: 100%;
  }
</style>
